Bootstrap: docker
From: nvcr.io/nvidia/nvhpc:23.11-devel-cuda_multi-ubuntu22.04

%environment
    export LC_ALL=C

%post
    ln -sf /usr/share/zoneinfo/America/Sao_Paulo /etc/localtime
    apt-get -y update
    apt-get -y install git cmake build-essential pkg-config wget \
                libboost-program-options-dev libboost-filesystem-dev \
                python3 python3-numpy python3-matplotlib python3-scipy \
                python3-pandas libgsl-dev libyaml-cpp-dev libhdf5-dev
    ln -sf /usr/bin/python3 /usr/bin/python
